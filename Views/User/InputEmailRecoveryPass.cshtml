<div style="margin-top: 145px; margin-bottom: 100px">
  <div class="mb-2 mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="forgot">
          <h2 style="margin-bottom: 20px;">Forgot your password?</h2>
          <p style="margin-bottom: 25px;">
            Change your password in three easy steps. This will help you to secure your password!
          </p>
          <ol class="list-unstyled" style="font-size: 14px;">
            <li style="margin-bottom: 6px;">
              <span class="text-primary text-medium">1. </span>Enter your email address below.
            </li>
            <li style="margin-bottom: 6px;">
              <span class="text-primary text-medium">2. </span>A confirm link will sent to your email, click the link.
            </li>
            <li style="margin-bottom: 6px;">
              <span class="text-primary text-medium">3. </span>Enter new password and re-password.
            </li>
          </ol>
        </div>

        <form class="card mt-4" asp-action="forgotPassword">
          <div class="card-body">
            <div class="form-group">
              <label for="email-for-pass" style="font-size: 15px;">1. Enter your email address</label>
              <input class="form-control" name="email" type="email" id="email-for-pass" required="">
              <span class="text-danger">@ViewBag.ErrorMessage</span>
            </div>
          </div>
          <div class="card-footer">
            <button class="btn btn-success" type="submit" style="font-size: 15px;" asp-controller="User" asp-action="forgotPassword">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>