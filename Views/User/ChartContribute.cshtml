<div>
  <title>Idea Record</title>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0 text-center w-1.0">Contribute Record</h5>
    </div>
    <div style="margin-left: 20px">
      <a asp-controller="storeowner" asp-action="ExportExcel"
        ><i class="fa-solid fa-file-excel" style="font-size: 30px"></i
      ></a>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <div>
      <canvas id="Idea Record3" class="w-1.0 h-1.0"></canvas>
    </div>
    <script>
      const labels3 = [@Html.Raw(ViewData["labels"])];
      const data3 = {
        labels: labels3,
        datasets: [{
          label: 'Contribute',
          backgroundColor: [@Html.Raw(ViewData["rgbs"])],
          borderColor: 'rgb(255, 99, 132)',
          data: [@ViewData["count"]],
          barPercentage: 0.5,
          barThickness: 80,
        }]
      };
      const config3 = {
        type: 'bar',
        data: data3,
        options: {
          scales: {
            yAxes: [{
              ticks: {
                beginAtZero: true
              }
            }]
          }
        }
      };
    </script>
    <script>
      const myChart3 = new Chart(
        document.getElementById("Idea Record3"),
        config3
      );
    </script>
  </div>
</div>
