@model IdeaWeb.Models.User
<div class="container" style="margin-top: 150px;margin-bottom: 125px;">
  <h1 class="text-center">User Proflie</h1>
  </br>
  </br>
  <div class="main-body">
    <div class="row gutters-sm" style="font-size: 14px;">
      <div class="col-md-4 mb-3">
        <div class="card" style="height: 100%;">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center" style="margin-top: 35px;">

              <div class="mt-3">
                <h4>@Html.DisplayFor(model => model.name)</h4>
                <p class="text-muted font-size-sm">
                  Department : @Html.DisplayFor(model => model.Department.Name)
                </p>
                <p class="text-muted font-size-sm">
                  Comment : @ViewBag.comment
                </p>
                <p class="text-muted font-size-sm">
                  Idea : @ViewBag.idea
                </p>
              </div>

            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.name)</div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Date of Birth</h6>
              </div>
              <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.dob)</div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.email)</div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Phone</h6>
              </div>
              <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.phone)</div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-12">
                <a class="btn btn-info border-0 white fw-500 #22b3c1"  asp-action="EditProfile" asp-route-id="@ViewBag.userId">
                  Edit
                </a>
                <a class="btn btn-info border-0 white fw-500 #157347"  asp-action="changeUserPass" asp-route-id="@ViewBag.userId">
                  Change Password
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>