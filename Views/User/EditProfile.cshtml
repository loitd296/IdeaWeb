@model IdeaWeb.Models.User
<div class="container" style="margin-top: 150px;margin-bottom: 125px;">
  <h1 class="text-center">Edit User Proflie</h1>
  </br>
  </br>
	<div class="main-body">
		<div class="row">
			<form asp-action="EditProfile" class="col-lg-12">
				<div class="card">
					<div class="card-body" style="">
						<div class="row mb-3" style="">
							<div class="col-sm-3">
								<h6 class="mb-0" style="line-height: 35px;">Full Name</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input type="hidden" asp-for="id"/>
								<input asp-for="name" class="form-control" style="font-size: 14px;" required="" />
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3" style="">
								<h6 class="mb-0" style="line-height: 35px;">Phone</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="phone" class="form-control" style="font-size: 14px;" required=""  />
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0" style="line-height: 38px;">Day of birth</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<input asp-for="dob" class="form-control" required=""  />
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0" style="line-height: 38px;">Department</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								<select asp-for="DepartmentId" class="form-control"
									asp-items="ViewBag.DepartmentId"></select>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-3"></div>
							<div class="col-sm-9 text-secondary">
								<button class="btn btn-info #157347 border-0 white fw-500" type="submit">
									Save change
								</button>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>