@model IdeaWeb.Models.Idea

@{
    ViewData["Title"] = "Details";
              var role = Context.Session.GetString("_Role") != null ? Context.Session.GetString("_Role") : null;
  string message = "You do not have permission to access this page";
    if (role != "Admin"){
     <script>
        alert("@message");
        window.location.href = "https://localhost:7188/User/login";
    </script>
  }
}

<h1>Details</h1>

<div>
    <h4>Idea</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Like_Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Like_Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dislike_Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dislike_Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.File)
            <a asp-action="DocumentDownload" asp-route-id="@Model.Id">Download</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.File)
        </dd>
        <dt class="col-sm-2
        ">
            <img src="~/Image/@Html.DisplayFor(model => model.Image)" width="50" height="100" />
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_Upload)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_Upload)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.id)
        </dd>
        <dd class="col-sm-10">
            @{
                foreach (var item in ViewBag.item)
                {
                    <span>@item.user.name</span>
                    <span>@item.Content</span>
                    <br />
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
